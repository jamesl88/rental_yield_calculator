<div class="page-header text-center">
  <h1>New landlord form</h1>
</div>
<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Enter Landlord Details</h3>
    </div>
    <div class="panel-body">
      <%= form_for @landlord, method: :post do |f| %>
        <form class="form-horizontal">
          <div class="form-group">
            <%= f.label :email, class: "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= f.email_field :email, required: true, placeholder: "test@example.com", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :phone_number, class: "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= f.text_field :phone_number, required: true, placeholder: "079xxxxxxxxx", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :postcode, class: "col-md-4 control-label"  %>
            <div class="col-md-8">
              <%= f.text_field :postcode, required: true,  placeholder: "NW1 1ER", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "Current Rent", class: "col-md-4 control-label"  %>
            <div class="col-md-8">
              <%= f.number_field :current_rent, required: true, placeholder: "1000",  class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "Maintenance", class: "col-md-4 control-label"  %>
            <div class="col-md-8">
              <div class="input-group">
                <span class="input-group-addon">£</span>
                <%= f.number_field :maintenance_expenses, placeholder: "e.g. Service charge",  class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "Yearly Yield", class: "col-md-4 control-label"  %>
            <div class="col-md-8">
              <div class="input-group">
                <span class="input-group-addon">£</span>
                <%= f.number_field :yearly_yield, readonly:true, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "Net Yield", class: "col-md-4 control-label"  %>
            <div class="col-md-8">
              <div class="input-group">
                <span class="input-group-addon">£</span>
                <%= f.number_field :net_yield, readonly:true, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :property_price, class: "col-md-4 control-label"  %>
            <div class="col-md-8">
              <%= f.number_field :property_price, required: true, placeholder: "200000",  class: "form-control" %>
            </div>
          </div>

          <hr>
            <div class="text-center">
              <%= f.submit "Submit", class: "btn btn-success" %>
            </div>
        </form>
      <% end %>
    </div>
  </div>
</div>
