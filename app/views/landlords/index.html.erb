<div class="page-header text-center">
  <h1>Landlords</h1>
</div>

<div>
  <table class="table table-striped table-hover table-bordered text-center">
    <tr class="success">
      <th><%= sortable "email" %></th>
      <th><%= sortable "phone_number" %></th>
      <th><%= sortable "postcode" %></th>
      <th><%= sortable "current_rent" %></th>
      <th><%= sortable "maintenance_expenses", "Maintenace" %></th>
      <th><%= sortable "yearly_yield" %></th>
      <th><%= sortable "net_yield" %></th>
      <th><%= sortable "property_price" %></th>
      <th></th>
    </tr>
    <% @landlords.each do |landlord| %>
      <tr>
        <td><%= landlord.email %></td>
        <td><%= landlord.phone_number %></td>
        <td><%= landlord.postcode %></td>
        <td><%= number_to_currency(landlord.current_rent, unit: "£") %></td>
        <td><%= number_to_currency(landlord.maintenance_expenses, unit: "£") %></td>
        <td><%= number_to_currency(landlord.yearly_yield, unit: "£") %></td>
        <td><%= number_to_currency(landlord.net_yield, unit: "£") %></td>
        <td><%= number_to_currency(landlord.property_price, unit: "£") %></td>
        <td><%= link_to "Edit", edit_landlord_path(landlord), class:"btn btn-default" %></td>
      </tr>
    <% end %>
  </table>
</div>

<div>
  <%= link_to "New landlord", new_landlord_path,class:"btn btn-success new-button" %>
</div>
<div class="col-md-6 col-md-offset-3 text-center">
  <%= will_paginate @landlords %>
</div>
