<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <% flash.each do |key, message| %>
      <div class="#{ flash_class key } alert-dismissable">
        <button[ type="button" class="close" data-dismiss="alert" aria-hidden="true" ] &times;></button>
        <p><%= message %></p>
      </div>
    <% end %>
  </div>
</div>
